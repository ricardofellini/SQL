SELECT VENPED.CODIGO, VENPRO.DESCRICAOEDITADA, VENPRO.VENDEDOR, VENVE.NOME
FROM
TVENPEDIDO VENPED
INNER JOIN
TVENPRODUTO VENPRO
ON VENPED.codigo = VENPRO.pedido
INNER JOIN
TVENVENDEDOR VENVE
ON VENPRO.vendedor = VENVE.codigo

WHERE
VENPRO.tipogrupo = 'S'

// Simple SQL that extracts sales by vendors
