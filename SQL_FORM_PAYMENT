SELECT

VENPED.CLIENTE,
RECLIE.NOME,
VENRE.VENDAVISTADH AS VENDA_DINHEIRO,
VENRE.ENTVENDAPRAZODH AS ENTRADA_VENDA_PRAZO,
VENRE.VENDAPRAZOCR AS VENDA_CREDIARIO,
VENRE.VENDAVISTACH AS VENDA_CHEQUE_VISTA,
VENRE.ENTVENDAPRAZOCH AS ENTRADA_CHEQUE_PRAZO,
VENRE.VENDAPRAZOCH AS VENDA_CHEQUE_PRAZO

FROM
TVENPEDIDO VENPED
INNER JOIN
TRECCLIENTEGERAL RECLIE
ON VENPED.CLIENTE = RECLIE.codigo
INNER join TVENREGISTRO VENRE
ON VENPED.codigo = VENRE.idpedido

ORDER BY VENRE.vendavistadh DESC;

// Script to extract sales data by payment forms from a SQL database, separated by from, such as money, credit, card, etc.
